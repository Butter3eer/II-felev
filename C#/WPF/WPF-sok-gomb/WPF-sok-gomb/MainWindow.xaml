<Window x:Class="WPF_sok_gomb.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_sok_gomb"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button Click="Button_Click" Width="100">
            <Image Source="/smile.png"/>
        </Button>
        
        <WrapPanel Background="PeachPuff" Grid.Row="2" x:Name="panel"/>
        <Button Click="pirul" Content="Pirul" HorizontalAlignment="Left" Margin="48,50,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
