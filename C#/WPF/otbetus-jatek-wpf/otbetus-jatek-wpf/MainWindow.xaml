<Window x:Class="otbetus_jatek_wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:otbetus_jatek_wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Menu>
            <MenuItem Header="File">
                <MenuItem Header="Open" Click="MenuItem_Click"/>
            </MenuItem>
        </Menu>

        <ListBox x:Name="szavakListBox" Grid.Row="1" Width="100" HorizontalAlignment="Left"/>
        <Button Grid.Row="1" Margin="120 10 0 0" HorizontalAlignment="Left" VerticalAlignment="Top" Click="Button_Click" Width="100" Height="30" Content="Listába"/>
    </Grid>
</Window>
